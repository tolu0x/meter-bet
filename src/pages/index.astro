---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import desc from '../assets/desc-frame.png';
import descMobile from '../assets/desc-frame-mobile.png';
import utilityDesc from '../assets/utility-desc.png';
import utilityDescMobile from '../assets/utility-desc-mobile.png';
import coinflip from '../assets/coinflip.png';
import crash from '../assets/crash.png';
import dice from '../assets/dice.png';
import lotto from '../assets/lotto.png';
import raffle from '../assets/raffle.png';
import roulette from '../assets/roulette.png';
import line1 from '../assets/line-1.png';
import line2 from '../assets/line-2.png';
import line3 from '../assets/line-7.png';
import circle1 from '../assets/circle-1.png';
import tg from '../assets/telegram-logo.png';
import tw from '../assets/twt-logo.png';
---

<Layout title="MeterBet" desc="Crypto betting platform">
	<div>	
		<Header />
		
		<main class="relative bg-wrapper h-[90vh] sm:h-[60vh]">
			<div class="pt-44 px-[4rem] sm:px-[1.7rem]">
				<h1 class="rf text-7xl sm:text-4xl w-40">METER BET</h1>
				<p class="w-[27rem] sm:w-[19rem] pt-4 pb-6">Welcome to the #1 casino on Meter, Where you can play games like coin flip or Jackpot and win tokens or rare NFTs to add to your collection.</p>
				<a href="#" class="p-3 rounded-xl bg-purple-700 hover:text-purple-700 hover:bg-white transition-colors ease-in">Launch dApp</a>
			</div>
			
		</main>
		<section class="bg-[#180118] pt-10 pb-20">
			<div>
				<div class="flex flex-col justify-center items-center gap-2">
					<h2 class="text-center text-3xl sm:text-xl font-bold">Immersive Gambling Experience</h2>
					<img src={line2} class="w-96 sm:w-72">
				</div>

				<div class="w-[80%] my-0 mx-auto pt-8 pb-20 ds-only lg:block sm:hidden">
					<img src={desc} >
				</div>

				<div class="w-[80%] my-0 mx-auto pt-8 pb-20 mb-only lg:hidden sm:block">
					<img src={descMobile}>
				</div>
			</div>

			<div>
				<div class="flex flex-col justify-center items-center gap-2 pb-10">
					<h2 class="text-center text-3xl sm:text-xl font-bold">Games (Coming soon)</h2>
					<img src={line1} class="w-96 sm:w-72">
				</div>

				<div class="flex items-center justify-center">
					<div class="grid grid-cols-3 sm:grid-cols-1 lg:gap-5 sm:gap-9">
					<img src={coinflip} alt="Coinflip">
					<img src={raffle} alt="Lotto">
					<img src={crash} alt="Crash">
					<img src={dice} alt="Dice">
					<img src={lotto} alt="Lotto">
					<img src={roulette} alt="Roulette">
				</div>
				</div>
			</div>

			<div>
				<div class="relative mt-40 lg:pb-32 sm:pb-9">
					<h2 class="text-center text-3xl pt-9 font-bold">$BET token</h2>
					<img src={circle1} class="w-80 sm:w-64 absolute lg:left-1/3 sm:left-20  top-0">
				</div>

				<div class="w-[80%] my-0 mx-auto pt-8 pb-20 ds-only lg:block sm:hidden">
					<img src={utilityDesc}>
				</div>

				<div class="w-[80%] my-0 mx-auto pt-8 pb-20 mb-only lg:hidden sm:block">
					<img src={utilityDescMobile}>
				</div>
			</div>

			<footer class="flex items-center justify-center gap-3">
				<div class="flex flex-col justify-center items-center ">
					<h3 class="text-center text-3xl font-semibold">Let's roll</h3>
					<img src={line3} class="w-50">
				</div>

				<a href="#">
					<img src={tg}>
				</a>

				<a href="#">
					<img src={tw}>
				</a>
			</footer>
		</section>
	</div>
</Layout>
